<h1>Add a New Post</h1>

<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <h2>Errors:</h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <p>
      <% user=User.find(session[:user_id]) %>
      <%= f.hidden_field :us_id, :value => user.id %>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit "Add a New Content" %>
    </p>

<% end %>
