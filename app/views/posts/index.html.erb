<h1>Welcome to PERSON SAYFA</h1>
<% $count =0 %>
<% @posts.each do |post| %>

    <% if post.id == $user_id %>
        <% $count = $count + 1 %>
        <p><%= post.content %></p>
        <p>
          <%= link_to "Edit", edit_post_path(post) %> |
          <%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete%>
        </p>
        <hr />
    <% end %>
<% end %>
<% if $count == 0 %>
    <p><%= link_to "Add a New Content", new_post_path %></p>
<% end %>
<p>< RUN ></p>

<p><%= link_to "Logout", logout_path %></p>
